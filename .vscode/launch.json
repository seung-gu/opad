{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI (API Server)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "api.main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8001"
      ],
      "jinja": true,
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "MONGO_URL": "mongodb://localhost:27017/",
        "MONGODB_DATABASE": "opad",
        "REDIS_URL": "redis://localhost:6379"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Python: Worker Service",
      "type": "debugpy",
      "request": "launch",
      "module": "worker.main",
      "jinja": true,
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "MONGO_URL": "mongodb://localhost:27017/",
        "MONGODB_DATABASE": "opad",
        "REDIS_URL": "redis://localhost:6379"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Next.js: Debug Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev:debug"],
      "cwd": "${workspaceFolder}/src/web",
      "env": {
        "API_BASE_URL": "http://localhost:8001",
        "PORT": "8000"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Next.js: Debug with Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}/src/web",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/*",
        "webpack:///*": "*"
      }
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "MONGO_URL": "mongodb://localhost:27017/",
        "MONGODB_DATABASE": "opad",
        "REDIS_URL": "redis://localhost:6379"
      },
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack: API + Web",
      "configurations": [
        "Python: FastAPI (API Server)",
        "Next.js: Debug Server"
      ],
      "stopAll": true
    }
  ]
}
